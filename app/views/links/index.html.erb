<h1>Listing links</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.name %></td>
    <td><%= link_to link.url, link.url %></td>
    <td><%= link.description %></td>
    <td><%= link.created_at %></td>
    <td><%= link_to 'Show', link, :class => "tiny button" %></td>
    <td><%= link_to 'Edit', edit_link_path(link), :class => "tiny button"  %></td>
    <td><%= link_to 'Destroy', link, :class => "tiny button",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Link', new_link_path, :class => "button" %>
